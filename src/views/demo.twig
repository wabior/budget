<h1 class="text-2xl font-semibold text-white">{{ title }}</h1>
<p class="mt-2 text-white/80">{{ description }}</p>

{% if highlights is not empty %}
  <ul class="mt-4 space-y-2 text-white/80">
    {% for item in highlights %}
      <li class="list-disc pl-5">{{ item }}</li>
    {% endfor %}
  </ul>
{% else %}
  <p class="mt-4 text-white/60">Brak elementów do wyświetlenia.</p>
{% endif %}

